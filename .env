# HyperLicked Node Configuration

# === Network Mode ===
SINGLE_NODE=true

# === Block Time Control ===
# Minimum time between blocks (milliseconds)
#
# Recommended values:
#   - 0ms    : No throttle (production - fastest, will spam logs in single-node)
#   - 100ms  : 10 blocks/sec (testnet - closer to Hyperliquid's ~100ms)
#   - 200ms  : 5 blocks/sec  (devnet default - prevents log spam)
#   - 1000ms : 1 block/sec   (for debugging/testing)
#
NODE_MIN_BLOCK_TIME_MS=100

# === Consensus Parameters ===
# CONSENSUS_PPC_MS=150        # Pacemaker wait time (Case-2)
# CONSENSUS_DELTA_MS=50       # Network upper bound

# === Transaction Generator (Load Testing) ===
# Enable continuous transaction generation for load testing
ENABLE_TXGEN=true          # Set to 'true' to enable
TXGEN_MODE=default          # Options: default, high, hyperliquid
#
# Modes:
#   default     - 100 tx/sec  (modest load, 50 traders, 3 markets)
#   high        - 1000 tx/sec (stress test, 200 traders, 5 markets)
#   hyperliquid - 15000 tx/sec (HL parity, 500 traders, 8 markets)

# === Logging ===
# LOG_FILE=data/node.log          # Consensus log file path
# TX_LOG_FILE=data/transactions.log  # API transaction log (frontend submissions)
# VERBOSE=false                   # Set to 'true' for detailed consensus logs
